#include <stdio.h>

int main()
{
    char kelime[] = "bilgisayar mühendisligi - enes ucar";
    char aranacakHarf = 'a';
    int i, sayac = 0;
    
    for (i = 0; kelime[i] != '\0'; i++) {
        if (aranacakHarf == kelime[i]) {
            printf("%d. elemanında %c harfi bulunmakta.\n", i + 1, aranacakHarf);
            sayac++;
        }
    }
    
    printf("%c harfi %d kez kullanıldı.", aranacakHarf, sayac);
    return 0;
}
